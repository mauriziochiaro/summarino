{
  "manifest_version": 3,
  "name": "Text Processor",
  "version": "1.0",
  "description": "Highlight text and process it via OpenAI's GPT-4o mini.",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
